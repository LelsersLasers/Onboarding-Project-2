{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "osx": {
                "command": "make -j V=1"
            },
            "windows": {
                "command": "mingw32-make -j V=1"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "osx": {
                "command": "make clean"
            },
            "windows": {
                "command": "rmdir /s /q ${workspaceFolder}\\build"
            },
            "problemMatcher": [],
        },
        {
            "label": "build and flash",
            "type": "shell",
            "osx": {
                "command": "make flash"
            },
            "windows": {
                "command": "mingw32-make flash"
            },
            "dependsOn": [
                "build"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}